{% extends 'base.html.twig' %}

{% block title %}Check your inbox!{% endblock %}

{% block navigation '' %}

{% block body %}
<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <a href="{{ path('landing') }}"><img class="mx-auto h-10 w-auto" src="{{ asset('img/turtunicorn.png') }}" alt="Monitortoise"></a>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Magic link sent</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">

        <p class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Your link is<br /> on its way!</p>
        <p class="mt-4 text-base text-gray-500">Check your inbox (and don't forget the spam folder).</p>

    </div>
  </div>
</div>
{% endblock %}
